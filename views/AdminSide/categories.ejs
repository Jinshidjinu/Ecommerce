<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/categories.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.7.1.slim.js"></script>
</head>

<body>

    <section id="menu">
        <div class="logo">
            <img src="/images/logo.png" alt="">
            <h2>Dynamic</h2>
        </div>
        <div class="items">
            <li><i class="fa-solid fa-chart-pie"></i> <a href="/admin/dashboard">Dashboard</a></li>
            <li><i class="fa-solid fa-table-cells-large"></i> <a href="#">Products</a></li>
            <li> <i class="fa-solid fa-list" style="color: #adb1b8;"></i> <a href="#">Categories</a></li>
            <li><i class="fa-solid fa-credit-card"></i> <a href="#">Orders</a></li>
            <li><i class="fa-solid fa-user" style="color: #c4c8cf;"></i><a href="/admin/Userslist">Users</a></li>
          
            
            <!-- <li><i class="fa-solid fa-chart-line"></i> <a href="#">Blank</a></li> -->
            <div class="logout">
                <li><i class="fa-solid fa-right-from-bracket" style="color: #d40c48;"></i> <a href="#">Logout</a></li>
            </div>
        </div>

    </section>


    <section id="interface">
        <div class="navigation">
            <div class="n1">
                <div>
            
                    <i id="menu-btn" class="fa-solid fa-bars"></i>
                </div>
                <div class="search">
                    <i class="fa-solid fa-magnifying-glass"></i>
                    <input type="text" placeholder="Search">
                </div>
            </div>
           
            <div class="profile">
              <a  class="category" id="add">Add Category</a>
              <!-- <a href="/admin/SubCategory" class="subcategory">SubCategory</a> -->
            </div>
       
        </div>

   
        <h3 class="i-name">Categories & SubCategories</h3>
        <div class="categoriesAdd" style="display: none;" id="forms">
            <form action="/admin/Category" method="post">
                <div class="exit" id="exitForm">
                    <i class="fa-solid fa-circle-xmark" style="color: #e81756;"></i>
                </div>
                <div class="form-group">
                    <label for="categoryName">Category Name:</label>
                    <input type="text" id="categoryName" name="categoryName" >
                </div>
                <div class="form-group">
                    <label for="subcategoryName">Subcategory Name:</label>
                    <input type="text" id="subcategoryName" name="subcategoryName" >
                </div>
                <button type="submit">Add Category/Subcategory</button>
            </form>
        </div>
        <div class="board">
            <table width="100%"> 
                <thead>
                    <tr>
                        <td>category</td>
                        <td>SubCategory</td>
                        <td>Editing</td>
                        <td>Remove</td>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <% CategoryData.forEach((data)=>{ %>
                        <td class="people"> 
                            <div class="people-de">
                                <h5><%=data.category%></h5>
                               
                            </div>
                        </td>

                        <td class="people-des">
                         <% data.subcategory.forEach((sub)=>{ %>
                            <p class="subcat_para<%=sub%>" id="subcat_para"><span><%=sub%></span><button class="Deletebtn" onclick="subategoryDelete('<%=sub%>','<%=data.category%>')"><i class="fa-solid fa-trash" style="color: #c74141;"></i></button></p>
                          <% })%>
                        </td>

                        <td class="active">
                            <a href="/admin/dashboard">Edit</a>
                        </td>

                        <td class="edit"> <a href="#">Delete</a></td>
                    </tr>
                    <% })%>
                 
                </tbody>
            </table>
        </div>
    

    
    </section>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function subategoryDelete(id,categoryname){
            Swal.fire({
                title: "Are you sure?",
  text: "You won't be able to revert this!",
  icon: "warning",
  showCancelButton: true,
  confirmButtonColor: "#3085d6",
  cancelButtonColor: "#d33",
  confirmButtonText: "Yes, delete it!"
}).then(async(result) => {
  if (result.isConfirmed) {
    const response = await fetch (`/admin/deleteCategory?subcategoryid=${id}&categoryid=${categoryname}`,{method:'DELETE'})
   if(!response.ok){
    throw new Error('error deleting subcategory'+response.statusText);
   }
   const result = await response.json();
   console.log(result);
    if(result.success==true){
        Swal.fire({
      title: "Deleted!",
      text: "Your file has been deleted.",
      icon: "success"
    });
    document.querySelector('.subcat_para'+ id).remove();
    }else{
        message.innerHTML = result.error || 'unknown error'
    }
  }
});
        }
    </script>
    <script>
        
        const category =document.getElementById("add")
        const addform = document.getElementById('forms')
        category.addEventListener('click',(event)=>{
            event.preventDefault()
            if(addform.style.display='none'){
                addform.style.display='block'
            }
        })

        const exit = document.getElementById('exitForm')
        exit.addEventListener('click',(event)=>{
            event.preventDefault()
            if(addform.style.display='block'){
                addform.style.display='none'
            }
        })

    </script>
    
</body>

</html>